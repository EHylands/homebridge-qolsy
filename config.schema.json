{
  "pluginAlias": "QolsysPanel",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "Name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Qolsys Panel"
      },
      "Host":{
        "title":"Host",
        "type":"string",
        "required": true
      },
      "Port":{
        "title":"Port",
        "type": "integer",
        "required": true,
        "default" : 12345
      },
      "SecureToken":{
        "title":"Secure Token",
        "type": "string",
        "required": true,
        "default": ""
      },
      "UserPinCode":{
        "title":"User Pin Code",
        "type": "string",
        "required": true,
        "default": "0000"
      },
      "ForceArm":{
        "title":"Force Arm",
        "type": "boolean",
        "required": true,
        "default": true
      },
      "AwayExitDelay":{
        "title":"Arm Away Exit Delay",
        "type": "integer",
        "required": true,
        "default": 120
      },
      "HomeExitDelay":{
        "title":"Arm Stay Exit Delay",
        "type": "integer",
        "required": true,
        "default": 120
      },
      "ShowSecurityPanel":{
        "type": "boolean",
        "title": "Show Homekit Security System Accessories",
        "default": true
      },
      "ShowMotion":{
        "type": "boolean",
        "title": "Show Homekit Motion and Occupancy Sensors",
        "default": true
      },
      "ShowContact":{
        "type": "boolean",
        "title": "Show Contact Sensors",
        "default": true
      },
      "ShowCO":{
        "type": "boolean",
        "title": "Show CO Sensors",
        "default": true
      },
      "ShowSmoke":{
        "type": "boolean",
        "title": "Show Smoke Sensors",
        "default": true
      },
      "ShowLeak":{
        "type": "boolean",
        "title": "Show Leak Sensors",
        "default": true
      },
      "ShowTilt":{
        "type": "boolean",
        "title": "Show Tilt Sensors",
        "default": true
      },
      "ShowBluetooth":{
        "type": "boolean",
        "title": "Show Bluetooth Sensors",
        "default": false
      },
      "ShowGlassBreak":{
        "type": "boolean",
        "title": "Show Glass Break Sensors",
        "default": false
      },
      "ShowTakeover":{
        "type": "boolean",
        "title": "Show Takeover Module Tamper Sensors",
        "default": false
      },
      "LogPartition":{
        "type": "boolean",
        "title": "Show Partitions notifications",
        "default": true
      },
      "LogZone":{
        "type": "boolean",
        "title": "Show Zones notifications",
        "default": false
      },
      "LogDebug":{
        "type": "boolean",
        "title": "Show Qolsys panel debug information",
        "default": false
      },
      "MotionSensorMode": {
        "title": "Homekit Sensor Mode",
        "type": "string",
        "default": "Motion",
        "oneOf": [
          { "title": "Show as Motion Sensors", "enum": ["Motion"] },
          { "title": "Show as Occupancy Sensors", "enum": ["Occupancy"] },
          { "title": "Show as Motion and Occupancy Sensors", "enum": ["MotionOccupancy"] }
        ],
        "condition": {
          "functionBody": "return model.ShowMotion === true;"
        },
        "required": true
      },
      "MotionDelay":{
        "type": "integer",
        "title": "Motion sensor trigger duration (min)",
        "minimum": 1,
        "maximum": 60,
        "default": 6,
        "condition": {
          "functionBody": "return model.ShowMotion === true && (model.MotionSensorMode === 'Motion' || model.MotionSensorMode === 'MotionOccupancy');"
        },
        "required": true
      },
      "OccupancyDelay":{
        "type": "integer",
        "title": "Occupancy sensor trigger duration (min)",
        "minimum": 15,
        "maximum": 1440,
        "default": 30,
        "condition": {
          "functionBody": "return model.ShowMotion === true && (model.MotionSensorMode === 'Occupancy' || model.MotionSensorMode === 'MotionOccupancy');"
        },
        "required": true

      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "expandable": false,
      "items":[ 
        {
          "type": "help",
          "helpvalue": "<em class='primary-text'> Please read: </em> <a href='https://github.com/EHylands/homebridge-qolsys'> homebridge-qolsys</a>"
        },{
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            "Host",
            "Port"
          ]
        },{
          "type": "flex",
          "flex-flow": "row wrap",
          "items": [
            "SecureToken",
            "UserPinCode"
          ]
        },
        {
          "title": "Security Panel Options",
          "type": "fieldset",
          "expandable": true,
          "expanded": true,
          "items": [
            "ShowSecurityPanel",
            "ForceArm",
            "AwayExitDelay",
            "HomeExitDelay"
          ]
        },
        {
          "title": "Motion Sensors Options",
          "type": "fieldset",
          "expandable": true,
          "expanded": true,
          "items": [
            "ShowMotion",
            "MotionSensorMode",
            "MotionDelay",
            "OccupancyDelay"
          ]
        },
        {
          "title": "Other Sensors Options",
          "type": "fieldset",
          "expandable": true,
          "expanded": true,
          "items": [
            "ShowContact",
            "ShowSmoke",
            "ShowCO",
            "ShowLeak",
            "ShowTilt",
            "ShowBluetooth",
            "ShowGlassBreak",
            "ShowTakeover"
          ]
        },
        {
          "title": "Log File Options",
          "type": "fieldset",
          "expandable": true,
          "expanded": true,
          "items": [
            "LogPartition",
            "LogZone",
            "LogDebug"
          ]
        },
        {
          "title": "Experimental Options",
          "type": "fieldset",
          "expandable": true,
          "expanded": true,
          "items": [
          ]
        }]
    }
  ]
}



           